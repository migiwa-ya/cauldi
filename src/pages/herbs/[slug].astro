---
import { loadAllHerbs, getHerbBySlug } from "../../utils/loadHerbs";
import type { APIContext } from "astro";
import type { Herb } from "../../types/herbs";

export async function getStaticPaths() {
  const herbs = await loadAllHerbs();
  return herbs.map((herb) => ({
    params: { slug: herb.slug }, props: { herb }
  }));
}

export function GET({ props }: APIContext) {
  return new Response(
    JSON.stringify({ herb: props.herb }),
  );
}

